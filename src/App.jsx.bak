  const [maxIntegrityBonus, setMaxIntegrityBonus] = useState(0)
  const [decayRateModifier, setDecayRateModifier] = useState(1)
  
  // Threat management
  const [currentThreatLevel, setCurrentThreatLevel] = useState(0)
